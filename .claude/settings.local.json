{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "Read",
      "Grep",
      "Glob",
      "LS",
      "Bash(git:*)",
      "Bash(dotnet:*)",
      "Bash(python:*)",
      "Bash(pip install:*)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Bash(wget:*)"
    ]
  }
}
